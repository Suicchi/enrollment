@model IEnumerable<Enrollment.Areas.Admin.Models.Student>


@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewBag.Title = $"View Records";
}

<div>
    <h1 style="color:white">Student Information System</h1>
    <h2>Information of Students</h2>
    @*Here will be the search box and the button*@
    @using (Html.BeginForm("Search", "Student", FormMethod.Post))
    {

        <div align="center">

            <input type="text" id="entryToFind" name="entryToFind">

            <input type="submit" id="submitId" value="Search" />

        </div>

    }

    @{
        if (ViewBag.SearchKey != null)
        {
            <span>
                Search Key: @ViewBag.SearchKey
            </span>
        }
    }

    @Html.Raw(ViewBag.Message)


    @*Here is the list of the entries*@
    <table align="center" cellpadding="10">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }, htmlAttributes: new { @class ="text-white" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ID }, htmlAttributes: new { @class = "text-white" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID }, htmlAttributes: new { @class = "text-white" })
                </td>
            </tr>
        }

    </table>

</div>
