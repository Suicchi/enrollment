@model Enrollment.Areas.Admin.Models.Student


@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewBag.Title = $"Details of {Html.DisplayFor(model => model.Name)}";
}


<div>
    <h1 style="color:white">Student Information System</h1>
    <h2>Information of @Html.DisplayFor(model => model.Name)</h2>
    
    <table align="center" cellpadding="10">
        <tr>


            <td>
                @Html.Label("Name", htmlAttributes: new { @class = "control-label col-md-2" })
            </td>
            <td>
                @Html.DisplayFor(model => model.Name)
            </td>
        </tr>
        <tr>
            <td>
                @Html.Label("Father's Name", htmlAttributes: new { @class = "control-label col-md-2" })
            </td>
            <td>
                @Html.DisplayFor(model => model.FathersName)
            </td>
        </tr>
        <tr>
            <td>
                @Html.Label("Mother's Name", htmlAttributes: new { @class = "control-label col-md-2" })
            </td>
            <td>
                @Html.DisplayFor(model => model.MothersName)
            </td>
        </tr>
        <tr>
            <td>
                @Html.Label("Gender", htmlAttributes: new { @class = "control-label col-md-2" })
            </td>
            <td>
                @Html.DisplayFor(model => model.Gender)
            </td>
        </tr>
        <tr>
            <td>
                @Html.Label("Present Address", htmlAttributes: new { @class = "control-label col-md-2" })
            </td>
            <td>
                @Html.DisplayFor(model => model.PresentAddress)
            </td>
        </tr>
        <tr>
            <td>
                @Html.Label("Permanent Address", htmlAttributes: new { @class = "control-label col-md-2" })
            </td>
            <td>
                @Html.DisplayFor(model => model.PermanentAddress)
            </td>
        </tr>
        <tr>
            <td>
                @Html.Label("Date of Birth", htmlAttributes: new { @class = "control-label col-md-2" })
            </td>
            <td>
                @Html.DisplayFor(model => model.DateofBirth)
            </td>
        </tr>
        <tr>
            <td>
                @Html.Label("Religion", htmlAttributes: new { @class = "control-label col-md-2" })
            </td>
            <td>
                @Html.DisplayFor(model => model.Religion)
            </td>
        </tr>
        <tr>
            <td>
                @Html.Label("Phone", htmlAttributes: new { @class = "control-label col-md-2" })
            </td>
            <td>
                @Html.DisplayFor(model => model.Phone)
            </td>
        </tr>
        <tr>
            <td>
                @Html.Label("Email", htmlAttributes: new { @class = "control-label col-md-2" })
            </td>
            <td>
                @*@Html.DisplayFor(model => model.Email, new { @class = "text-white" } )*@
                @Html.DisplayTextFor(model => model.Email)
            </td>
        </tr>
        <tr>
            <td>
                @Html.Label("Admission Date", htmlAttributes: new { @class = "control-label col-md-2" })
            </td>
            <td>
                @Html.DisplayFor(model => model.AdmissionDate)
            </td>
        </tr>
        <tr>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = Model.ID }, htmlAttributes: new { @class = "text-white" })
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { id = Model.ID }, htmlAttributes: new { @class = "text-white" })
            </td>
        </tr>


    </table>

</div>
    


